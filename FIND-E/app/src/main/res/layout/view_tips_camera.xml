<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <io.sympli.find_e.ui.widget.CircleTextView
        android:layout_width="@dimen/circle_number_size"
        android:layout_height="@dimen/circle_number_size"
        android:layout_gravity="center_horizontal"
        app:text="1" />

    <io.sympli.find_e.ui.widget.TypefaceTextView
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/camera_first"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <io.sympli.find_e.ui.widget.CircleTextView
        android:layout_width="@dimen/circle_number_size"
        android:layout_height="@dimen/circle_number_size"
        android:layout_gravity="center_horizontal"
        app:text="2" />

    <io.sympli.find_e.ui.widget.TypefaceTextView
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin_small"
        android:text="@string/camera_second"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <io.sympli.find_e.ui.widget.CircleTextView
        android:layout_width="@dimen/circle_number_size"
        android:layout_height="@dimen/circle_number_size"
        android:layout_gravity="center_horizontal"
        app:text="3" />

    <io.sympli.find_e.ui.widget.TypefaceTextView
        style="@style/TextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin_small"
        android:text="@string/camera_third"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <io.sympli.find_e.ui.widget.TypefaceTextView
        android:id="@+id/try_now_btn"
        style="@style/TextRegularWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_blue_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="16dp"
        android:text="@string/try_now_btn"
        android:textAllCaps="true"
        android:textColor="@color/light_blue" />
</LinearLayout>