<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_status_bar" />

        <io.sympli.find_e.ui.widget.states.ButtonView
            android:id="@+id/btn_view"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <io.sympli.find_e.ui.widget.DialogMessageWidget
            android:id="@+id/message_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_status_bar"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:id="@+id/bottom_status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <io.sympli.find_e.ui.widget.TypefaceTextView
                    android:id="@+id/battery_life"
                    style="@style/TextRegularWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20%"
                    android:textSize="20sp" />

                <io.sympli.find_e.ui.widget.TypefaceTextView
                    style="@style/TextLightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_life"
                    android:textSize="13sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <io.sympli.find_e.ui.widget.EmotionsImageView
                    android:id="@+id/robot_iv_state"
                    android:layout_width="@dimen/robo_width"
                    android:layout_height="@dimen/robo_height"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <io.sympli.find_e.ui.widget.TypefaceTextView
                    android:id="@+id/signal_quality"
                    style="@style/TextRegularWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0%"
                    android:textSize="20sp" />

                <io.sympli.find_e.ui.widget.TypefaceTextView
                    style="@style/TextLightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:text="@string/signal_quality"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>